{
  // VSCode
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // Workbench
  "workbench.colorTheme": "Illusion",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.indent": 18,

  // Explorer
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  // Files
  "files.associations": {
    ".prettierrc.json": "json",
    ".env.": "dotenv"
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/.tsconfig.tsbuildinfo": true
  },
  "files.trimTrailingWhitespace": true,

  // Editor
  "editor.fontSize": 15,
  "editor.tabSize": 2,
  "editor.fontFamily": "JetBrains Mono, Fira Code Retina",
  "editor.fontLigatures": true,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "smooth",
  "editor.renderLineHighlight": "gutter",
  "editor.stickyScroll.enabled": true,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.autoClosingBrackets": "always",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.wordWrap": "on",
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.parameterHints.enabled": true,
  "editor.accessibilitySupport": "off",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  // Terminal
  "terminal.integrated.fontFamily": "JetBrains Mono, Fira Code Retina",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontSize": 15,

  // Emmet
  "emmet.useInlineCompletions": true,
  "emmet.includeLanguages": {
    "javascriptreact": "javascriptreact",
    "typescriptreact": "typescriptreact",
    "mardkown": "html"
  },
  // Git & GitHub
  "git.mergeEditor": true,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true
  },
  "gitlens.graph.dateStyle": "absolute",
  "gitlens.graph.avatars": true,
  "gitlens.views.commitDetails.files.layout": "list",
  "githubIssues.queries": [
    {
      "label": "My Issues",
      "query": "default"
    },
    {
      "label": "Created Issues",
      "query": "author:${user} state:open repo:${owner}/${repository} sort:created-desc"
    },
    {
      "label": "Recent Issues",
      "query": "state:open repo:${owner}/${repository} sort:updated-desc"
    }
  ],

  // Tabnine
  "tabnine.experimentalAutoImports": true,

  // Eslint
  "eslint.validate": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact"
  ],

  // Languages
  "typescript.suggest.autoImports": true,

  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma",
    "editor.formatOnSave": true
  },

  "[javascript]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },

  "[typescript]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },

  "[javascriptreact]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },

  "[typescriptreact]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },

  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },

  // Markdown
  "markdown.preview.breaks": true,

  // Material Icon Theme
  "material-icon-theme.folders.associations": {
    "infra": "app",
    "jest": "test"
  },
  "material-icon-theme.folders.theme": "specific",
  "material-icon-theme.folders.color": "#90a4ae",

  // Discord Presence
  "discord.detailsIdling": "üëÄ Procurando nos Arquivos...",
  "discord.detailsEditing": "‚òï {file_name} com {total_lines} linhas",
  "discord.largeImageIdling": "‚è≤Ô∏è C√≥digo, Caf√© e Pomodoro",
  "discord.lowerDetailsDebugging": "üêõ Debugging: {git_branch}",
  "discord.lowerDetailsEditing": "üì¶ Projeto: {workspace}",
  "discord.lowerDetailsIdling": "‚òï Hora do caf√©",
  "discord.lowerDetailsNoWorkspaceFound": "{file_size}",
  "symbols.hidesExplorerArrows": false
}
