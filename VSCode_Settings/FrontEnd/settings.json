{
  // VSCode
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // Explorer
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  // Workbench
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 18,

  // Files
  "files.associations": {
    ".prettierrc.json": "json",
    ".env.": "dotenv"
  },
  "files.exclude": {
    "**/node_modules": false,
    "**/.next": false
  },
  "files.trimTrailingWhitespace": true,

  // Editor
  "editor.fontSize": 15,
  "editor.tabSize": 2,
  "editor.fontFamily": "JetBrains Mono, Fira Code Retina",
  "editor.fontLigatures": true,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "smooth",
  "editor.renderLineHighlight": "gutter",
  "editor.stickyScroll.enabled": true,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.wordWrap": "on",
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.parameterHints.enabled": true,
  "editor.defaultColorDecorators": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true,
    "source.organizeImports": true
  },

  // Terminal
  "terminal.integrated.fontFamily": "JetBrains Mono, Fira Code Retina",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontSize": 15,

  // Material Icon Theme
  "material-icon-theme.folders.associations": {
    "infra": "app",
    "jest": "test"
  },
  "material-icon-theme.folders.theme": "specific",
  "material-icon-theme.folders.color": "#90a4ae",

  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascript",
    "typescript": "typescript",
    "javascriptreact": "javascriptreact",
    "typescriptreact": "typescriptreact",
    "mardkown": "html"
  },
  "emmet.useInlineCompletions": true,
  "emmet.syntaxProfiles": {
    "typescript": "tsx"
  },

  // Tabnine
  "tabnine.experimentalAutoImports": true,

  // Git & GitHub
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": false,
    "javascript": true,
    "python": true,
    "javascriptreact": true
  },

  // Eslint
  "eslint.validate": ["javascript", "typescriptreact", "javascriptreact"],

  // Languages
  "[javascript]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.formatOnSaveMode": "file",
    "editor.autoClosingBrackets": "always"
  },

  "[typescript]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.formatOnSaveMode": "file",
    "editor.autoClosingBrackets": "always"
  },
  "typescript.suggest.autoImports": true,

  "[javascriptreact]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.formatOnSaveMode": "file",
    "editor.autoClosingBrackets": "always"
  },

  "[typescriptreact]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.formatOnSaveMode": "file",
    "editor.autoClosingBrackets": "always"
  },

  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },

  // Tailwind
  "tailwindCSS.includeLanguages": {
    "plaintext": "javascript"
  },

  // Discord Presence
  "discord.detailsIdling": "üëÄ Procurando nos Arquivos...",
  "discord.detailsEditing": "‚òï {file_name} com {file_size}",
  "discord.largeImageIdling": "‚è≤Ô∏è C√≥digo, Caf√© e Pomodoro",
  "discord.lowerDetailsDebugging": "üêõ Debugging: {git_branch}",
  "discord.lowerDetailsEditing": "üì¶ Projeto: {workspace}",
  "discord.lowerDetailsIdling": "‚òï Hora do caf√©",
  "discord.lowerDetailsNoWorkspaceFound": "{file_size}",

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "envKeys",
        "scope": "string.quoted.single.ini,constant.numeric.ini,string.quoted.double.ini",
        "settings": {
          "foreground": "#ff000000"
        }
      }
    ]
  },
  "gitlens.graph.dateStyle": "absolute",
  "gitlens.graph.avatars": true,
  "git.mergeEditor": true,
  "editor.accessibilitySupport": "off",
  "markdown.preview.breaks": true,
  "gitlens.views.commitDetails.files.layout": "tree",
  "githubIssues.queries": [
    {
      "label": "My Issues",
      "query": "default"
    },
    {
      "label": "Created Issues",
      "query": "author:${user} state:open repo:${owner}/${repository} sort:created-desc"
    },
    {
      "label": "Recent Issues",
      "query": "state:open repo:${owner}/${repository} sort:updated-desc"
    }
  ],
  "workbench.colorTheme": "Illusion",
  "workbench.iconTheme": "material-icon-theme"
}
